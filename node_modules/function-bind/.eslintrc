{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"func-name-matching": 0,
		"indent": ["error", 4],
		"no-new-func": ["error", { "allowArrowFunctions": true }],
	},

	"overrides": [
		{
			"files": "test/**",
			"rules": {
				"max-lines-per-function": 0,
				"strict": ["error", "never"]
			},
		},
	],
}
